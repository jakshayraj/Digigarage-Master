@model Digigarage.BusinessEntities.BookingHistoryViewModel
@{ ViewBag.Title = "Edit"; }
@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal" style="color: black">
                    <h4>Assign Mechanic</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.BookingId)
                    @Html.HiddenFor(model => model.DepartmentId)
                    @Html.HiddenFor(model => model.HistoryId)



                    <div class="form-group">
                        @Html.LabelFor(model => model.VehicleId, "Licence Plate", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("VehicleId", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.VehicleId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ServiceId, "Service", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("ServiceId", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.ServiceId, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.Mechanic.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MechanicId", null, "-- Select Mechanic --", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MechanicId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn" style="background-color:#55a630; color:white; margin-left :45%; width : 140px;" />
                        </div>
                    </div>
                </div>}

<div>
    <a href="@Url.Action("AdminIndex","Maintenance")" class="btn" style="background-color:#023e8a; color:white; padding: 3px 4px;"><i class="fa fa-arrow-left"></i>Back to List</a>
</div>

<script src="~/assets/js/vendor-all.min.js"></script>
<script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets/js/pcoded.min.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")


